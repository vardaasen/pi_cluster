#!/usr/bin/env bash
PI_ALIASES=("pi-node-1")
declare -A PI_IPS
for alias in "${PI_ALIASES[@]}"; do
IP=$(ssh -G "$alias" | awk '/^hostname / { print $2 }')
  if [ -z "$IP" ]; then
    echo "Error: could not find IP for alias '$alias'."
    exit 1
  fi
  PI_IPS["$alias"]="$IP"
  echo "Found: $alias -> $IP"
done

